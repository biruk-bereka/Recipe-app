<section class="flex flex-col items-center gap-4 mt-12">

    <%= button_to "Add Recipe", new_recipe_path, method:'get', class: "p-3
      rounded-full bg-emerald-200 text-end mb-3 justify-self-end" %> 

 
  <ul class="flex flex-col items-center w-fit">
      <% @recipes.each do |recipe| %>
        <li class="flex border p-5 gap-10 mb-3">
          <div class="flex flex-col ">
            <%= link_to recipe_path(recipe.id), remote: false do %>
              <span> <%= recipe.name %> </span>
            <% end %>
            <%= button_to 'Remove', recipe_path(recipe.id), method: 'delete', class: 'font-medium text-red-600 dark:text-blue-500 hover:underline' %>
          </div>
          <div class="flex flex-col">
            <%= link_to recipe_path(recipe.id), remote: false do %>
              <span> <%= recipe.description %> </span>
            <% end %>
          </div>
        </li>
      
    <% end %>
  </ul>
</section>